def parse_guide_results(guide_dir):
    """Extract pLDDT, iPTM, disorder, clashes from AF3 outputs"""
    summary = json.load(open(f"{guide_dir}/summary_confidences_0.json"))
    full_data = json.load(open(f"{guide_dir}/full_data_0.json"))
    
    plddt_mean = sum(full_data['atom_plddts']) / len(full_data['atom_plddts'])
    iptm = summary['iptm']
    fraction_disordered = summary['fraction_disordered']
    has_clash = summary['has_clash']
    
    return {
        "plddt_mean": plddt_mean,
        "iptm": iptm,
        "structural_confidence": 0.5 * (plddt_mean/100) + 0.5 * iptm,
        "verdict": "PASS" if (plddt_mean >= 50 and iptm >= 0.30 and 
                             fraction_disordered < 0.5 and has_clash == 0) else "FAIL"
    }
